@model List<SildeHome>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    LIST SLIDE
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row  pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    SLIDE List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Slide" asp-action="Create" class="btn btn-primary">

                    <i class="bi bi-plus-circle"></i>     Create New Silde
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                      Số thứ tự
                    </th>
                    <th>
                       Image
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody style="height:auto">
                @foreach (var obj in Model)
                {
                    <tr >
                        <td>
                            @obj.Id
                        </td>
                        <td style="text-align:center; width:60%">
                            <img style="width:100%; border-radius:10px; height:auto" src=" @obj.LinkImage" />
                        </td>

                        <td style="width: 30%;">
                            <div style="height: 100%; display: flex; justify-content: center; align-items: center;">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 w-25">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 w-25">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>




                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>
