<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
            </h2>
            <hr />

        </div>
        @*        <div asp-validation-summary="ModelOnly">
        *@
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Category.Name" class="p-0">

        </label>
        <input asp-for="Category.Name" type="text" class="form-control" />
        <span asp-validation-for="Category.Name" class="text-bg-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Category.DisplayOrder">

        </label>
        <input asp-for="Category.DisplayOrder" type="text" class="form-control" />
        <span asp-validation-for="Category.DisplayOrder" class="text-bg-danger"></span>
    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-primary" style="width:150px">
                Delete
            </button>
        </div>
        <div class="col-6">
            <a asp-page="/category/index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </div>


    </div>
